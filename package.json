{
  "name": "@nuxtus/cli",
  "version": "1.0.4",
  "description": "Command line interface for Nuxtus projects.",
  "main": "cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nuxtus/cli"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "package": "pkg . --targets node14-macos-x64 --output nuxtus",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/cli.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p . && cp -R src/templates build/src",
    "local": "sudo npm i -g && nuxtus",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "bin": {
    "nuxtus": "./build/cli.js"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": [
      "node_modules/figlet/fonts/Standard.flf"
    ],
    "targets": [
      "node14-linux-x64",
      "node14-macos-x64",
      "node14-win-x86"
    ]
  },
  "author": "Craig Harman",
  "license": "MIT",
  "devDependencies": {
    "@types/clear": "^0.1.2",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^17.0.34",
    "nodemon": "^2.0.16",
    "pkg": "^5.7.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "vitest": "^0.12.9"
  },
  "dependencies": {
    "@directus/sdk": "^9.11.0",
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "commander": "^9.2.0",
    "dotenv": "^16.0.1",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.4",
    "nunjucks": "^3.2.3",
    "path": "^0.12.7"
  }
}