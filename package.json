{
  "name": "@nuxtus/cli",
  "version": "1.5.0",
  "description": "Command line interface for Nuxtus projects.",
  "exports": "./build/src/cli.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/nuxtus/cli"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/cli.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && nuxtus",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "bin": {
    "nuxtus": "./build/src/cli.js"
  },
  "engines": {
    "node": "^16.11.0 || ^17.0.0 || ^18.0.0",
    "npm": ">=8.5.0"
  },
  "author": "Craig Harman",
  "license": "MIT",
  "devDependencies": {
    "@nuxtus/generator": "1.6.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.6",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/clear": "0.1.2",
    "@types/figlet": "1.5.5",
    "@types/inquirer": "9.0.1",
    "@types/node": "17.0.34",
    "@types/nunjucks": "3.2.1",
    "nodemon": "2.0.19",
    "semantic-release": "19.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.8.3",
    "vitest": "0.23.2"
  },
  "dependencies": {
    "@directus/sdk": "^10.1.1",
    "chalk": "^5.0.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "commander": "^9.2.0",
    "dotenv": "^16.0.1",
    "figlet": "^1.5.2",
    "inquirer": "^9.0.0",
    "nunjucks": "^3.2.3",
    "path": "^0.12.7"
  },
  "release": {
    "branches": "main",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "revert",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "Changelog"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
