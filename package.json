{
  "name": "nuxtus-cli",
  "version": "0.0.1",
  "description": "Command line interface for Nuxtus projects.",
  "main": "nuxtus.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "pkg . --targets node14-macos-x64 --output nuxtus",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/cli.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && nuxtus",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "bin": {
    "nuxtus": "./build/cli.js"
  },
  "pkg": {
    "scripts": "build/**/*.js"
  },
  "author": "Craig Harman",
  "license": "MIT",
  "devDependencies": {
    "@types/clear": "^0.1.2",
    "@types/commander": "^2.12.2",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^17.0.34",
    "nodemon": "^2.0.16",
    "pkg": "^5.7.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^9.2.0",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.4",
    "path": "^0.12.7"
  }
}
